
@{
    ViewData["Title"] = "AddUser";
}
@model KursachTRPO.Models.RegisterModel;

<div style="margin:unset; padding:unset" class="container">
    <div class="row">
        @{await Html.RenderPartialAsync("_Menu");}
        <div class="col-lg-offset-3 col-lg-4">
            <form method="post" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="All" />
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Login">Введите Логин</label><br />
                        <input class="form-control" asp-for="Login" />
                        <span style="color:red" asp-validation-for="Login"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Введите Email</label><br />
                        <input class="form-control" type="text" asp-for="Email" />
                        <span style="color:red" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Введите пароль</label><br />
                        <input class="form-control" asp-for="Password" />
                        <span style="color:red" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                        <input class="form-control" asp-for="ConfirmPassword" />
                        <span style="color:red" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role">Введите роль (Admin, User)</label><br />
                        <input class="form-control" asp-for="Role" />
                        <span style="color:red" asp-validation-for="Role"></span>
                    </div>

                    <div class="col-lg-offset-9">
                        <input class="btn btn-success" type="submit" value="Добавить" />
                    </div>
                </div>
            </form>
            <br />
            <br />
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>