
@{
    ViewData["Title"] = "AddStudents";
}
@model KursachTRPO.Models.StudentsModel;

<div style="margin:unset; padding:unset" class="container">
    <div class="row">
        @{await Html.RenderPartialAsync("_Menu");}
        <div class="col-lg-offset-3 col-lg-4">
            <form method="post" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="All" />
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Name">Введите имя</label><br />
                        <input class="form-control" asp-for="Name" />
                        <span style="color:red" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MidleName">Введите фамилию</label><br />
                        <input class="form-control" type="text" asp-for="MidleName" />
                        <span style="color:red" asp-validation-for="MidleName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName">Введите отчество</label><br />
                        <input class="form-control" asp-for="LastName" />
                        <span style="color:red" asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GroupName">Введите название группы</label><br />
                        <input class="form-control" asp-for="GroupName" />
                        <span style="color:red" asp-validation-for="GroupName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address">Введите адрес</label><br />
                        <input class="form-control" asp-for="Address" />
                        <span style="color:red" asp-validation-for="Address"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NumberOfBook">Номер зачетной книжки</label><br />
                        <input class="form-control" asp-for="NumberOfBook" />
                        <span style="color:red" asp-validation-for="NumberOfBook"></span>
                    </div>

                    <div class="col-lg-offset-9">
                        <input class="btn btn-success" type="submit" value="Добавить" />
                    </div>
                </div>
            </form>
            <br />
            <br />
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
