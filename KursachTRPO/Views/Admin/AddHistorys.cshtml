
@{
    ViewData["Title"] = "AddHistorys";
}

@model KursachTRPO.Models.HistoryModel;

<div style="margin:unset; padding:unset" class="container">
    <div class="row">
        @{await Html.RenderPartialAsync("_Menu");}
        <div class="col-lg-offset-3 col-lg-4">
            <form method="post" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="All" />
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Type">Введите тип</label><br />
                        <input class="form-control" type="text" asp-for="Type" />
                        <span style="color:red" asp-validation-for="Type"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateTime">Введите дату</label><br />
                        <input style="font-size:15px" class="form-control" type="date" asp-for="DateTime" />
                        <span style="color:red" asp-validation-for="DateTime"></span>
                    </div>
                    <input type="hidden" asp-for="@Model.IdStudent" value="@Model.IdStudent" />
                    <div class="col-lg-offset-9">
                        <input class="btn btn-success" type="submit" value="Добавить" />
                    </div>
                </div>
            </form>
            <br />
            <br />
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>>

